{
  "manifest_version": 3,
  "name": "Magnet Link Copier",
  "version": "1.0",
  "description": "Находит ссылки с magnet и добавляет кнопку для их копирования.",
  "permissions": ["clipboardWrite"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
